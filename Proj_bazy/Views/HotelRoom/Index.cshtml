@model IEnumerable<Proj_bazy.Models.HotelRoom>

<h1>Lista Pokojów</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowy pokój</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Numer pokoju</th>
            <th>Typ pokoju</th>
            <th>Cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Number</td>
                <td>@item.RoomType?.Name</td>
                <td>@item.RoomType?.PricePerNight zł</td>
            </tr>
        }
    </tbody>
</table>